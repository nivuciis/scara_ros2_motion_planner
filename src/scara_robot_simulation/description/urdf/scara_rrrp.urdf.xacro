<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="scara_rrrp">

    <gazebo reference="base_link">
        <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="link1">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="link2">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="link3">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="end_effector_link">
        <material>Gazebo/Green</material>
    </gazebo>

    <link name="world"/>

    <joint name="world_to_base_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="1.0" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0.5" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="1.0" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0.5" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <joint name="joint1" type="revolute">
        <parent link="base_link"/>
        <child link="link1"/>
        <origin xyz="0 0 1.0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
    </joint>

    <link name="link1">
        <visual>
            <geometry>
                <box size="0.5 0.05 0.05"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.05 0.05"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <joint name="joint2" type="revolute">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-2.5" upper="2.5" effort="10" velocity="1.0"/>
    </joint>

    <link name="link2">
        <visual>
            <geometry>
                <box size="0.4 0.05 0.05"/>
            </geometry>
            <origin xyz="0.2 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.05 0.05"/>
            </geometry>
            <origin xyz="0.2 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.4"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <joint name="joint3" type="prismatic">
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0.4 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="1.0" effort="10" velocity="1.0"/>
    </joint>

    <link name="link3">
        <visual>
            <geometry>
                <cylinder length="0.5" radius="0.02"/>
            </geometry>
            <origin xyz="0 0 -0.25" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.5" radius="0.02"/>
            </geometry>
            <origin xyz="0 0 -0.25" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <joint name="joint4" type="revolute">
        <parent link="link3"/>
        <child link="end_effector_link"/>
        <origin xyz="0 0 -0.5" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
    </joint>

    <link name="end_effector_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

</robot>
